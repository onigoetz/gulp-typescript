{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist/*", "test/fixtures"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noArguments": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
